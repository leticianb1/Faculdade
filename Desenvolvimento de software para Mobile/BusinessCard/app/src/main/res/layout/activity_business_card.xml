<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".businessCard">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/business_card_title"
            android:id="@+id/tv_title"
            android:textSize="@dimen/busnesscard_title"
            android:gravity="center" />

        <ImageView
            android:layout_width="177dp"
            android:layout_height="240dp"
            android:id="@+id/busnessCardImage"
            android:contentDescription="@string/business_card_image_description"
            android:src="@drawable/business_card_image"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@color/blue"
            android:padding="5dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome:"
                android:id="@+id/businessCardNameLabel"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/businessCardDescriptionLabel"
                android:layout_alignEnd="@+id/businessCardDescriptionLabel"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/business_card_name"
                android:id="@+id/businessCardNameValue"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/businessCardNameLabel"
                android:layout_toEndOf="@+id/businessCardNameLabel"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descrição:"
                android:id="@+id/businessCardDescriptionLabel"
                android:layout_below="@+id/businessCardNameLabel"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/business_card_description"
                android:id="@+id/businessCardDescriptionValue"
                android:layout_below="@+id/businessCardNameValue"
                android:layout_toRightOf="@+id/businessCardDescriptionLabel"
                android:layout_toEndOf="@+id/businessCardDescriptionLabel"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"/>
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>
